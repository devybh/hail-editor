{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "moduleResolution": "NodeNext",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "paths": {
      "@editor/*": [
        "./modules/hail-editor/*"
      ]
    }
  },
  "files": [
    "modules/hail-editor/main.ts"
  ],
  "include": [
    "src/**/*",
    "test/**/*",
    "hail-editor/**/*"
  ]
}
