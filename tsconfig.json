{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@h/*": ["./src/HailEditor/*"]
    },
    "typeRoots": ["./src/HailEditor/@types/**/*", "node_modules/@types"],
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "CommonJS",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["./src"]
}
